<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"

    app:cardCornerRadius="14dp"
    android:layout_margin="10dp"
    android:elevation="44dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"

    android:elevation="16dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="26dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/placeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="fonts/montserratbold"
                android:text="PLACE NAME"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/placeVicinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="fonts/quicksand"
                android:maxLines="2"
                android:text="Kanchanjanga,KhadakPada,Kalyan West,Thande ,India,wiafaf"
                android:textColor="#A09E9E"
                android:textSize="18sp" />

            <hyogeun.github.com.colorratingbarlib.ColorRatingBar
                android:id="@+id/placeRating"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:elevation="10dp"
                android:rating="3"

                app:empty_color="#777676"
                app:progress_color="#FFEB3B" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>